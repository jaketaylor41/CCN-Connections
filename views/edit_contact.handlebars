<h2 class="page-header">Edit Contact</h2>
{{#if errors}}
    {{#each errors}}
        <div class="alert alert-danger">{{msg}}</div>
    {{/each}}
{{/if}}
<form method="post" action=('/contacts/edit/' + contact._id)>
    <div class="form-group">
        <label>Group</label>
        <input type="text" class="form-control" value=contact.group name="group">
    </div>
    <div class="form-group">
        <label>Number</label>
        <input type="text" class="form-control" value=contact.number name="number">
    </div>
    <button type="submit" class="btn btn-default">Submit</button>
</form>